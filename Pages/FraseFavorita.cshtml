@page
@model DicasSustentaveisGS1.Pages.FrasesPreferidasModel
@{
    ViewData["Title"] = "Frases Preferidas";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #93DC8C;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 30px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        color: #5A8A5A;
        margin-bottom: 20px;
    }

    .alert {
        margin: 20px 0;
        padding: 10px;
        background-color: #7EF37E;
        color: white;
        border-radius: 5px;
        text-align: center;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

        .table thead {
            background-color: #7EF37E;
            color: white;
        }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table tr:hover {
            background-color: #f5f5f5;
        }

    .btn {
        font-size: 16px;
        font-weight: bold;
        padding: 8px 16px;
        margin: 5px 0;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        color: white;
        transition: background-color 0.3s ease;
    }

    .btn-danger {
        background-color: #f44336;
    }

        .btn-danger:hover {
            background-color: #d32f2f;
        }

    .empty-message {
        text-align: center;
        color: #555;
        margin: 20px 0;
    }
</style>

<div class="container">
    <h1>Frases Preferidas</h1>

   
    @if (TempData["Mensagem"] != null)
    {
        <div class="alert">@TempData["Mensagem"]</div>
    }

    
    @if (Model.FrasesPreferidas.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Frase</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var frasePreferida in Model.FrasesPreferidas)
                {
                    <tr>
                        <td>@frasePreferida.Frase.Conteudo</td>
                        <td>
                            <form method="post" asp-page-handler="Excluir" style="display: inline;">
                                <input type="hidden" name="id" value="@frasePreferida.Id" />
                                <button type="submit" class="btn btn-danger">Excluir</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="empty-message">Nenhuma frase preferida foi salva ainda.</p>
    }
</div>
