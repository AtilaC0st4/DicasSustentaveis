@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


    <h1 class="sustainable-header">
        Comece a transformar seu dia a dia com dicas simples para um futuro mais sustentável!
    </h1>

    <style>
        .sustainable-header {
            font-family: 'Arial', sans-serif;
            color: #3E5634; 
            text-align: center;
            font-size: 2.5rem;
            font-weight: bold;
            background: linear-gradient(90deg, #E8F5E9, #A5D6A7); 
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
            margin: 20px auto;
            max-width: 80%;
        }

        .sustainable-button {
            width: 320px;
            font-family: 'Arial', sans-serif;
            color: #ffffff; 
            background-color: #3E5634; 
            border: none;
            padding: 15px 30px;
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 25px;
            cursor: pointer;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2); 
            transition: background-color 0.3s ease, transform 0.2s ease;
            margin-top: 20px;
            text-decoration:none;
        }

            .sustainable-button:hover {
                color: #ffffff;
             background-color: #558B2F; 
                transform: scale(1.05); 
            }

            .sustainable-button:active {
                background-color: #33691E; 
                transform: scale(0.95); 
            }

    </style>

